@model List<Usuario>

@{
    ViewData["Title"] = "MostrarUsuarios";
}

<h1>MostrarUsuarios</h1>
<table class="table">
    <thead>
        <tr>
            <th>
                Id Usuario
            </th>
            <th>
                Nombre
            </th>
            <th>
                Apellido
            </th>
            <th>
                Email
            </th>
            <th>
                Telefono
            </th>
            <th>
                Rol
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (Usuario usuario in Model) {
        <tr>
            <td>
                    @usuario.IdUsuario
            </td>
            <td>
                    @usuario.Nombre
            </td>
            <td>
                    @usuario.Apellido
            </td>
            <td>
                    @usuario.Email
            </td>
            <td>
                    @usuario.Telefono
            </td>
            <td>
                    @usuario.Rol.Nombre
            </td>
        </tr>
}
    </tbody>
</table>
