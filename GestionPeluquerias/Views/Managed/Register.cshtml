@model GestionPeluquerias.Models.Usuario

@{
    ViewData["Title"] = "Registro de Usuario";
}

<h2>Registro</h2>
<form method="post" asp-controller="Managed" asp-action="Register">
    <div class="form-group">
        <label>Nombre</label>
        <input type="text" asp-for="Nombre" class="form-control" required />
    </div>
    <div class="form-group">
        <label>Apellido</label>
        <input type="text" asp-for="Apellido" class="form-control" required />
    </div>
    <div class="form-group">
        <label>Email</label>
        <input type="email" asp-for="Email" class="form-control" required />
    </div>
    <div class="form-group">
        <label>Contraseña</label>
        <input type="password" asp-for="Password" class="form-control" required />
    </div>
    <div class="form-group">
        <label>Teléfono</label>
        <input type="text" asp-for="Telefono" class="form-control" />
    </div>
    <div class="form-group">
        <label>Selecciona tu rol</label>
        <select name="rolusuario" class="form-control" required>
            <option value="3">Cliente</option>
            <option value="2">Peluquero</option>
            <option value="1">Administrador</option>
        </select>
    </div>
    <button type="submit" class="btn btn-success">Registrarse</button>
</form>

<hr />
<p>¿Ya tienes cuenta? <a asp-action="Login" asp-controller="Managed">Inicia sesión aquí</a></p>