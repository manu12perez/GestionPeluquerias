@model GestionPeluquerias.Models.Peluqueria

@{
    ViewData["Title"] = "Editar Peluquería";
}

<div class="container mt-4">
    <!-- Botón para volver a la vista anterior -->
    <div class="row mb-3">
        <div class="col">
            <a asp-action="Index" class="btn btn-secondary">
                <i class="bi bi-arrow-left"></i> Volver al listado
            </a>
        </div>
    </div>

    <div class="card">
        <div class="card-header bg-primary text-white">
            <h2 class="mb-0">Editar Peluquería</h2>
        </div>
        <div class="card-body">
            <form asp-action="Edit" method="post" novalidate>
                <input type="hidden" asp-for="IdPeluqueria" />
                <input type="hidden" name="redirectToCrearPeluquero" value="@(ViewData["REDIRECTTOCREARPELUQUERO"]?.ToString().ToLower() ?? "false")" />
                <div class="row">
                    <div class="col-md-6">
                        <!-- Información Básica -->
                        <h4 class="mb-3">Información Básica</h4>

                        <!-- Nombre -->
                        <div class="form-group mb-3">
                            <label asp-for="Nombre" class="form-label">Nombre</label>
                            <input asp-for="Nombre" class="form-control" required maxlength="100"
                                   pattern=".{1,100}"
                                   title="El nombre debe tener hasta 100 caracteres." />
                            <span asp-validation-for="Nombre" class="text-danger"></span>
                        </div>

                        <!-- Dirección -->
                        <div class="form-group mb-3">
                            <label asp-for="Direccion" class="form-label">Dirección</label>
                            <input asp-for="Direccion" class="form-control" required maxlength="255"
                                   pattern=".{1,255}"
                                   title="La dirección debe tener hasta 255 caracteres." />
                            <span asp-validation-for="Direccion" class="text-danger"></span>
                        </div>

                        <!-- Teléfono -->
                        <div class="form-group mb-3">
                            <label asp-for="Telefono" class="form-label">Teléfono</label>
                            <input asp-for="Telefono" class="form-control" required
                                   pattern="\d{9,15}"
                                   title="El teléfono debe tener entre 9 y 15 dígitos numéricos." />
                            <span asp-validation-for="Telefono" class="text-danger"></span>
                        </div>

                        <!-- Administrador -->
                        <div class="form-group mb-3">
                            <label asp-for="IdUsuario" class="form-label">Administrador</label>
                            <select asp-for="IdUsuario" asp-items="ViewBag.Administradores" class="form-control" required>
                                <option value="">Seleccione un Administrador</option>
                            </select>
                            <span asp-validation-for="IdUsuario" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="col-md-6">
                        <!-- Ubicación y Horarios -->
                        <h4 class="mb-3">Ubicación y Horarios</h4>

                        <!-- Coordenadas -->
                        <div class="row">
                            <!-- Latitud -->
                            <div class="col-md-6 mb-3">
                                <label asp-for="Latitud" class="form-label">Latitud</label>
                                <input asp-for="Latitud" class="form-control" type="number" step="any" required
                                       min="-90" max="90"
                                       title="Ingrese una latitud válida entre -90 y 90." />
                                <span asp-validation-for="Latitud" class="text-danger"></span>
                            </div>

                            <!-- Longitud -->
                            <div class="col-md-6 mb-3">
                                <label asp-for="Longitud" class="form-label">Longitud</label>
                                <input asp-for="Longitud" class="form-control" type="number" step="any" required
                                       min="-180" max="180"
                                       title="Ingrese una longitud válida entre -180 y 180." />
                                <span asp-validation-for="Longitud" class="text-danger"></span>
                            </div>
                        </div>

                        <!-- Horarios -->
                        <div class="row">
                            <!-- Horario Apertura -->
                            <div class="col-md-6 mb-3">
                                <label asp-for="HorarioApertura" class="form-label">Horario Apertura</label>
                                <input asp-for="HorarioApertura" class="form-control" type="time" required />
                                <span asp-validation-for="HorarioApertura" class="text-danger"></span>
                            </div>

                            <!-- Horario Cierre -->
                            <div class="col-md-6 mb-3">
                                <label asp-for="HorarioCierre" class="form-label">Horario Cierre</label>
                                <input asp-for="HorarioCierre" class="form-control" type="time" required />
                                <span asp-validation-for="HorarioCierre" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Botones de acción -->
                <div class="mt-4 d-flex justify-content-between">
                    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
                    <button type="submit" class="btn btn-success">
                        <i class="bi bi-save"></i> Guardar Cambios
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}