@model GestionPeluquerias.Models.Peluqueria

@{
    ViewData["Title"] = "Editar Peluquería";
}

<h1>Editar Peluquería</h1>

<div class="row">
    <div class="col-md-6">
        <form asp-action="Edit" method="post" novalidate>
            <input type="hidden" asp-for="IdPeluqueria" />

            <div class="form-group">
                <label asp-for="Nombre" class="control-label">Nombre</label>
                <input asp-for="Nombre" class="form-control" required />
                <span asp-validation-for="Nombre" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Direccion" class="control-label">Dirección</label>
                <input asp-for="Direccion" class="form-control" required />
                <span asp-validation-for="Direccion" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Telefono" class="control-label">Teléfono</label>
                <input asp-for="Telefono" class="form-control" required
                       pattern="\d{9,15}"
                       title="El teléfono debe tener entre 9 y 15 dígitos numéricos." />
                <span asp-validation-for="Telefono" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Latitud" class="control-label">Latitud</label>
                <input asp-for="Latitud" class="form-control" type="number" step="any" required />
                <span asp-validation-for="Latitud" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Longitud" class="control-label">Longitud</label>
                <input asp-for="Longitud" class="form-control" type="number" step="any" required />
                <span asp-validation-for="Longitud" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="HorarioApertura" class="control-label">Horario Apertura</label>
                <input asp-for="HorarioApertura" class="form-control" type="time" required />
                <span asp-validation-for="HorarioApertura" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="HorarioCierre" class="control-label">Horario Cierre</label>
                <input asp-for="HorarioCierre" class="form-control" type="time" required />
                <span asp-validation-for="HorarioCierre" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="IdUsuario" class="control-label">Administrador</label>
                <select asp-for="IdUsuario" asp-items="ViewBag.Administradores" class="form-control">
                    <option value="">Seleccione un Administrador</option>
                </select>
                <span asp-validation-for="IdUsuario" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-primary">Guardar Cambios</button>
            <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
